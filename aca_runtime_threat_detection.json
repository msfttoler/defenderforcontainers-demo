    {
      "type": 1,
      "content": {
        "json": "## \ud83d\udea8 ACA Runtime Threat Detection\nMonitor runtime alerts and threat activity for Azure Container Apps."
      }
    },
    {
      "type": 3,
      "content": {
        "chartType": "table",
        "query": {
          "resourceType": "microsoft.operationalinsights/workspaces",
          "resource": "workspace",
          "query": "\nSecurityAlert\n| where ResourceType == \"containerapp\"\n| project TimeGenerated, AlertName, Description, Severity, CompromisedEntity\n"
        },
        "title": "Live ACA Runtime Alerts"
      }
    },
    {
      "type": 3,
      "content": {
        "chartType": "barchart",
        "query": {
          "resourceType": "microsoft.operationalinsights/workspaces",
          "resource": "workspace",
          "query": "\nSecurityAlert\n| where ResourceType == \"containerapp\"\n| summarize Count = count() by AlertName\n| top 10 by Count\n"
        },
        "title": "Top ACA Alert Types"
      }
    }
  ],
  "parameters": [
    {
      "id": "workspace",
      "type": 3,
      "name": "Workspace",
      "value": "/subscriptions/e15e403f-7ca0-4fa6-9c9b-e780f664db5b/resourceGroups/aca-defender-demo-rg/providers/Microsoft.OperationalInsights/workspaces/aca-demo-law"
    }
  ]
}